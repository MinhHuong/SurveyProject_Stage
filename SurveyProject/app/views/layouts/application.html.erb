<!DOCTYPE html>
<html>

<head>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <title>Survey Page</title>
</head>

<body>
<div id='wrapper' class="container">
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#" id="navbrand-lbn"></a>
      </div>
      <div>
        <ul class="nav navbar-nav navbar-right">
          <% if session[:name_user] != nil %>
              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                  Hello, <%= session[:name_user] %>
                  <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to employee_profile_path(@user_id) do %>
                        <i class="fa fa-user"></i> My profile
                    <% end %>
                  <li>
                    <%= link_to :logout, method: 'delete' do %>
                      <i class="fa fa-sign-out"></i> Log out
                    <% end %>
                  </li>
                </ul>
              </li>
          <% else %>
              <li>
                <%= link_to :signup do %>
                  <i class="fa fa-user-plus"></i> Sign up
                <% end %>
              </li>
              <li>
                <%= link_to :login do %>
                  <i class="fa fa-sign-in"></i> Login
                <% end %>
              </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <div id="content-wrapper">
    <div id="menubar"><%= content_for?(:menu_bar) ? yield(:menu_bar) : nil %></div>
    <hr>
    <div id='content'><%= content_for?(:content) ? yield(:content) : yield %></div>
  </div>

  <footer>
    <p>Linkbynet 2015</p>
  </footer>
</div>
</body>

</html>

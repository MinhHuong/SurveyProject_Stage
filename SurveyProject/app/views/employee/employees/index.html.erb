<% content_for :menu_bar do %>
    <%= render 'menubar' %>
<% end %>

<% content_for :content do %>
    <div class="row">
      <!-- Recently created surveys -->
      <div class="col-sm-6">
        <div class="widget widget-left">
          <div class="widget-header">
            <div style="background-color: #255625">
              <h3>Recently created surveys</h3>
            </div>
          </div>
          <div class="widget-content">
            <% @content_widgets[:recent_created].each do |survey| %>
                <%= react_component 'SurveysWidget', { survey: survey, bonus_info: survey.created_at, label_bonus_info: 'Created at: ' } %>
            <% end %>
            <p class="view-all">
              <%= link_to :employee_recently_created do %>
                  View all <i class="fa fa-angle-double-right"></i>
              <% end %>
            </p>
          </div>
        </div>
      </div>

      <!-- Recently done surveys -->
      <div class="col-sm-6">
        <div class="widget widget-right">
          <div class="widget-header">
            <div style="background-color: #eea236">
              <h3>Recently done surveys</h3>
            </div>
          </div>
          <div class="widget-content">
            <% @content_widgets[:recent_done].each do |survey| %>
                <%= react_component 'SurveysWidget', { survey: survey, bonus_info: survey.created_at, label_bonus_info: 'Done at: ' } %>
            <% end %>
            <%= link_to :employee_recently_done do %>
                View all <i class="fa fa-angle-double-right"></i>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <!-- High priority surveys -->
      <div class="col-sm-6">
        <div class="widget widget-left">
          <div class="widget-header">
            <div style="background-color: #ac2925">
              <h3>High priority surveys</h3>
            </div>
          </div>
          <div class="widget-content">
            <% @content_widgets[:high_prio].each do |survey| %>
                <%= react_component 'SurveysWidget', { survey: survey, bonus_info: survey.date_closed, label_bonus_info: 'Closed at: ' } %>
            <% end %>
            <p class="view-all"><a href="#">View all <i class="fa fa-angle-double-right"></i></a></p>
          </div>
        </div>
      </div>

      <!-- Surveys that will be closed today -->
      <div class="col-sm-6">
        <div class="widget widget-right">
          <div class="widget-header">
            <div style="background-color: #286090">
              <h3>Surveys that will be closed today</h3>
            </div>
          </div>
          <div class="widget-content">
            <% @content_widgets[:closed_today].each do |survey| %>
                <%= react_component 'SurveysWidget', { survey: survey, bonus_info: survey.date_closed, label_bonus_info: 'Closed today: ' } %>
            <% end %>
            <p class="view-all"><a href="#">View all <i class="fa fa-angle-double-right"></i></a></p>
          </div>
        </div>
      </div>
    </div>
<% end %>
<%= render template: 'layouts/application' %>